  <body>

   

    <div class="container">

      <div class="starter-template">
        <h1>ABM Lista de Empresas</h1>
        {% block body %}{% endblock %}
      </div>

     <table class="table">
    <thead>
      <tr>
        <th>Cuit</th>
        <th>Nombre</th>
        <th>Cant Empleados</th>
      </tr>
    </thead>
    <tbody>
    	

    	{% for empresa in empresas %}
		<tr>
	    	<td>{{empresa.cuit}}</td>
	    	<td>{{empresa.nombre}}</td>
	    	<td>{{empresa.cantEmpleados}}</td>
	    	<td>
	    		<a href="/editar/{{empresa.id}}" class="btn btn-info">Editar</a>

	    		<a href="/eliminar/{{empresa.id}}" class="btn btn-danger">Eliminar</a>
	    	</td>
    	</tr>
    	{% endfor %}
    </tbody>
  </table>

    </div><!-- /.container -->


  </body>
</html>